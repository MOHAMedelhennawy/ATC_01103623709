<%- include('partials/head'); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&family=Material+Symbols+Outlined" rel="stylesheet" />
    <script type="module" src="/javascript/pages/loginPage.js"></script>
<body>
    <div class="auth-container">
        <div class="card">
            <span class="material-symbols-outlined icon">calendar_month</span>
            <h2>Welcome Back</h2>
            <p>Sign in to your account to continue</p>
            <form>
                <input class="email-field" type="email" placeholder="Enter your email" required />
                <input class="password-field" type="password" placeholder="Enter your password" required />
                <button type="submit">Sign In</button>
            </form>
            <div class="footer">
                Don't have an account? <a href="/signup">Create an account</a>
            </div>
        </div>
    </div>
    
</body>
</html>
